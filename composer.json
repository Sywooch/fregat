{
    "name": "vovancho/karpovportal",
    "description": "Yii 2 Karpov Portal",
    "keywords": ["yii2", "framework", "basic", "project template, Karpov Portal"],
    "type": "project",
    "license": "BSD-3-Clause",
    "support": {
        "source": "https://github.com/vovancho/karpovportal"
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": ">=2.0.5",
        "yiisoft/yii2-bootstrap": "*",
        "yiisoft/yii2-swiftmailer": "*",
        "kartik-v/yii2-dynagrid": "@stable",
        "phpoffice/phpexcel": "1.8.0",
        "kartik-v/yii2-widget-datepicker": "*",
        "kartik-v/yii2-widget-datetimepicker": "*",
        "kartik-v/yii2-money": "*",
        "kartik-v/yii2-widget-touchspin": "*",
        "kartik-v/yii2-datecontrol": "dev-master",
        "kartik-v/yii2-widget-fileinput": "@dev",
        "kartik-v/yii2-mpdf": "*",
        "kartik-v/yii2-icons": "@dev"
    },
    "require-dev": {
        "yiisoft/yii2-codeception": "*",
        "yiisoft/yii2-debug": "*",
        "yiisoft/yii2-gii": "*",
        "yiisoft/yii2-faker": "*",

        "codeception/codeception": "^2.2.3",
        "codeception/verify": "~0.3.1",
        "codeception/specify": "~0.4.3"
    },
    "config": {
        "process-timeout": 1800
    },
    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ],
            "generateCookieValidationKey": [
                "config/web.php"
            ]
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
